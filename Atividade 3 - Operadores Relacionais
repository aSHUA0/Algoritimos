// ATIVIDADE 01 //
#include <stdio.h>
#include <locale.h>
#include <math.h>

int main(){
    
    setlocale(LC_ALL, "portuguese");
    /* atividade 03*/
    int idade;

    printf("Digite sua idade:");
    scanf("\n %d", &idade);

    if(idade >= 18){
        printf("maior de idade");
    }else {
        printf("menor de idade");
    }

    return 0;
}
// ATIVIDADE 02 //
#include <stdio.h>
#include <locale.h>
#include <math.h>

int main(){
    
    setlocale(LC_ALL, "portuguese");
    /* atividade 03*/
    float salario;

    printf("Digite seu salario:");
    scanf("\n %f", &salario);

    if(salario >= 1320){
        printf("rico");
    }else {
        printf("pobre");
    }

    return 0;
}
