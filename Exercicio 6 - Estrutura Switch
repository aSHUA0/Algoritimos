// ATIVIDADE 01 //
#include<stdio.h>
#include<math.h>

main(){
	int DDD;
	
	printf("Digite o DDD:\n");
	scanf("%d", &DDD);

	switch(DDD){
		case 61:
			printf("É de Brasilia");
			break;
		
		case 71:
			printf("É de Salvador");
			break;
		
		case 11:
			printf("É de São Paulo");
			break;
		
		case 21:
			printf("É de Rio de Janeiro");
			break;
		
		case 32:
			printf("É de Juiz de Fora");
			break;
			
		case 19:
			printf("É de Campinas");
			break;
			
		case 27:
			printf("É de Vitória");
			break;
			
		case 31:
			printf("É de Belo Horizonte");
			break;
		default:
			printf("Sua cidade não existe");
			break;
	}
}

// ATIVIDADE 02 //
#include<stdio.h>
#include<math.h>

main(){
	int codigo, quant;
	float preco;
	
	printf("Digite o codigo do alimento:\n");
	scanf("%d", &codigo);
	
	printf("Digite quantos alimentos voce quer:\n");
	scanf("%d", &quant);

	switch(codigo){
		case 100:
			preco = 10.10 * quant;
			printf("O valor total ficou: %.2f", preco);
			break;

		case 101:
			preco = 8.30 * quant;
			printf("O valor total ficou: %.2f", preco);
			break;
		
		case 102:
			preco = 8.50 * quant;
			printf("O valor total ficou: %.2f", preco);
			break;
			
		case 103:
			preco = 12.50 * quant;
			printf("O valor total ficou: %.2f", preco);
			break;
			
		case 104:
			preco = 13.25 * quant;
			printf("O valor total ficou: %.2f", preco);
			break;
			
		default:
			printf("Não existe no cardapio");
			break;
	}
}

// ATIVIDADE 03 //
#include<stdio.h>
#include<math.h>

main(){
	int prato, sobremesa, bebida, cal=0;

	printf("Digite o numero do prato:\n");
	scanf("%d", &prato);
	
	printf("Digite o numero da sobremesa:\n");
	scanf("%d", &sobremesa);

	printf("Digite o numero da bebida:\n");
	scanf("%d", &bebida);
	
	switch(prato){
		case 1:
			cal += 180;
			printf("Voce escolheu o prato vegetariano\n");
			break;

		case 2:
			cal += 230;
			printf("Voce escolheu o peixe\n");
			break;
		
		case 3:
			cal += 250;
			printf("Voce escolheu o frango\n");
			break;
			
		case 4:
			cal += 350;
			printf("Voce escolheu a carne\n");
			break;
			
		default:
			printf("Não existe nas opções\n");
			break;
	}
	switch(sobremesa){
		case 1:
			cal += 75;
			printf("Voce escolheu o abacaxi\n");
			break;

		case 2:
			cal += 110;
			printf("Voce escolheu o sorvete diet\n");
			break;
		
		case 3:
			cal += 170;
			printf("Voce escolheu o mouse diet\n");
			break;
			
		case 4:
			cal += 200;
			printf("Voce escolheu o mouse chocolate\n");
			break;
			
		default:
			printf("Não existe nas opções\n");
			break;
			
	}switch(bebida){
		case 1:
			cal += 20;
			printf("Voce escolheu o chá\n");
			break;

		case 2:
			cal += 70;
			printf("Voce escolheu o suco de laranja\n");
			break;
		
		case 3:
			cal +=100;
			printf("Voce escolheu o suco de melão\n");
			break;
			
		case 4:
			cal+=65;
			printf("Voce escolheu o refrigerante diet\n");
			break;
			
		default:
			printf("Não existe nas opções\n");
			break;
	}
	printf("O total de calorias ingeridas vai ser: %d", cal);
}
